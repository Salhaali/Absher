{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static-build" }
  ],
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_DEMO_MODE": "true"
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
